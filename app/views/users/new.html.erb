<h1>Sign in</h1>
<%= flash.now[:notice] if flash.now[:notice] %>
<%= form_with model: @user, url: users_path do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= form.text_field :password %>
  </div>
  <div class="form-group">
    <%= label_tag :password_confirmation %>
    <%= form.text_field :password_confirmation %>
  </div>
  <%= form.submit 'Sign In' %>
<% end %>
